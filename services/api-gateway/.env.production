# API Gateway Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration - Use strong secrets in production
JWT_SECRET=your-production-jwt-secret-256-bits-minimum
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Service URLs - Update with your production service URLs
ORDER_SERVICE_URL=http://order-service:3002
INVENTORY_SERVICE_URL=http://inventory-service:3003
PAYMENT_SERVICE_URL=http://payment-service:3004
USER_SERVICE_URL=http://user-service:3005

# RabbitMQ Configuration - Update with your production RabbitMQ URL
RABBITMQ_URL=amqp://production-rabbitmq:5672

# CORS Configuration - Update with your production frontend URLs
ALLOWED_ORIGINS=https://your-production-domain.com

# Health Check
HEALTH_CHECK_TIMEOUT=5000
